block content

block tumblr
	h3 Blog
	ul
		- each id in postsTumblr
			li.post
				- if ( id.type == 'photo' )
					each photo in id.photos
						a(href='#{photo.alt_sizes[0].url}')
							img(src='#{photo.alt_sizes[1].url}')
						p !{id.caption}
				#{id.title}
				!{id.text}

