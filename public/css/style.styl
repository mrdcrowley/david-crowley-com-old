@import 'nib'
@import url('http://fonts.googleapis.com/css?family=Raleway:600,900')
@import url('http://fonts.googleapis.com/css?family=Arvo')
@import url('http://fonts.googleapis.com/css?family=Noto+Sans:400,700,400italic,700italic')

global-reset()

/* =Variables */
colorBackground = #faf9f0
colorLink = #00a6cd
colorHeader = #333
colorMain = #fa5b4d
fontBody = 'Noto Sans', Georgia, sans-serif
fontAlt = Arvo, Georgia, sans-serif
animationSpeed = .2s


/* =Text */
a
	color colorLink
	transition color animationSpeed ease-out
	&:hover
		color darken(colorLink, 30%)
p, h1, h2, h3, h4, h5, h6
	margin-bottom 1em

p
.list li
	line-height: 140%
	&:last-child
		margin-bottom 3em

.list li
	margin-bottom 1em

.small
	font-size: 80%;

/* =Structure */
body
	font-family fontBody
	background colorBackground
	color #444

header
	background url('/img/headerBg.png') bottom
	height auto
	overflow: hidden
	padding-left 100px
	text-shadow 0px -1px 0px darken(colorHeader, 30%)
	transition all animationSpeed linear
	h1
		font: 600 1.5em/1 'Raleway', sans-serif
		color: rgba(0,0,0,.5)
		letter-spacing: .5em
		margin 0
		span
			font-size: 4em
			z-index: 100
			text-shadow: .04em .04em 0 #9cb8b3
			transition all animationSpeed ease-out
			&:hover
				text-shadow: -.04em -.04em 0 #9cb8b3
		span,
		span:after
			font-weight: 900
			color: #efedce
			white-space: nowrap
			display: inline-block
			position: relative
			letter-spacing: .1em
			padding: .2em 0 .25em 0
		span:after
			content: attr(data-shadow-text)
			color rgba(255,255,255,.25)
			text-shadow: none
			position: absolute
			left: .0875em
			top: .0875em
			z-index: -1;
			-webkit-mask-image: url(http://f.cl.ly/items/1t1C0W3y040g1J172r3h/mask.png)
			transition all animationSpeed ease-out
		span:hover:after
			top 0
			left 0
			left: -.0875em
			top: -.0875em
	.byline
		color rgba(255,255,255,.5)
		font-family Arvo
		padding-left 5px
		margin-bottom 20px

#container
	padding-left 100px
	padding-right 100px

#contact
	ul
		li
			font-size 250%
			font-weight 700
			line-height 200%
			a
				color colorHeader
				text-decoration none
			a:hover
				color colorLink
				text-shadow #fff -1px -1px 0;

#content
	clear both
	float left
	padding-top 20px
	h2
		background rgba(0,0,0,.2)
		clear both
		font-family fontAlt
		font-size 180%
		font-weight 700
		padding .5em
	h3
		clear both
		font-size: 140%
		font-weight 700

footer
	clear both
	font-size 80%
	margin auto
	opacity .5
	padding-top 5em
	text-align center

/* =Utilities */
.one-half
	width 49%
.one-third
	width 33%
.two-thirds
	width 66%

.left
	float left
.right
	float right

.thumb
	border 1px solid rgba(0,0,0,.05)
	float right
	margin-bottom 4em
	margin-left 2em
	max-width 62%
	&.small
		max-width 30%

.nowrap
	white-space nowrap

.subtle
	opacity .75

@media all and (max-device-width: 851px)
	header
		padding-left 2em
	#container
		padding 2em
	.one-half,
	.one-third,
	.two-thirds
		width auto
	.left,
	.right
		float none
	.thumb,
	.thumb.small
		float none
		height auto
		margin 0
		margin-bottom 1em
		max-width: 100%
		width 100%