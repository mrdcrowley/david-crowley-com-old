@import 'nib'
@import url('http://fonts.googleapis.com/css?family=Arvo')
@import url('http://fonts.googleapis.com/css?family=Playfair+Display:400,700,900,400italic,700italic,900italic')

global-reset()


/* =Variables */
colorBackground = #fff
colorBody = #444
colorLink = #666
colorLinkHover = #333
colorHeader = #333
colorMain = #333
colorText = #999
fontBody = Arvo, Georgia, sans-serif
fontAlt = 'PlayFair Display', Georgia, sans-serif
animationSpeed = .2s


/* =Text */
a
	color colorLink
	transition color animationSpeed ease-out
	transition background-color animationSpeed ease-out
	&:hover
		color colorLinkHover
p, h1, h2, h3, h4, h5, h6
	margin-bottom 1em
h1, h2, h3, h4, h5, h6
	color #666
	font-family fontAlt
code
	background rgba(0,0,0,.05)
	font-family: Consolas, monospace;
	padding 0 .25em
em
	font-style italic
strong
	font-weight bold
ul
	list-style none
	margin 0
	padding 0
	li
		margin-bottom 1em
#container p
.list
	margin-bottom 1em
	li
		margin-bottom 1em
		overflow hidden
.small
	font-size: 80%


/* =Structure */
body
	background #fff
	color colorText
	font-family fontBody
	line-height 170%
header
	background #333 url('/img/slantedDark.png') center bottom repeat-x
	border-top .25em solid lighten(colorHeader, 15%)
	font-family fontAlt
	font-size 125%
	font-style italic
	margin-bottom 3em
	padding .5em
	padding-bottom 0
	text-align center
	#logo a
		background transparent url("/img/logo.png")
		display block
		height 55px
		margin .5em auto
		text-indent -99999px
		width 91px
	#byline
		color lighten(colorHeader,30%)
		margin 0
		a
			color rgba(255,255,255,.5)
			text-decoration none
			&:hover
				color #fff
	#hire
		background #333
		border 1px solid #fff
		color #fff
		display inline-block
		margin-top 1em
		padding .5em
		padding-bottom .75em
		text-decoration none
		&:hover
			background #fff
			color #333

#contact
	ul
		li
			font-weight 700
			a
				color colorHeader
				text-decoration none
			a:hover
				color colorLink
#content
	clear both
	margin auto
	h2, h3, h3 h4, h5, h6
		font-family fontAlt
		font-weight 400
	h2
		background rgba(0,0,0,.1)
		display inline-block
		font-size 125%
		font-style italic
		font-weight 700
		margin-bottom 3em
		padding 1em
	h3
		background rgba(0,0,0,.2)
		clear both
		font-size 180%
		font-style italic
		font-weight 900
		padding .5em
	h4
		clear both
		font-size 140%
		font-style italic
		font-weight 700
	h5
		font-style italic
		margin 0

footer
	clear both
	font-size 80%
	margin auto
	padding-top 5em
	text-align center


/* =tumblr */
#tumblr
	h3
		background transparent
	ul.posts
		margin-bottom 2em
		li
			background #fff url('/img/slantedLight.png') center bottom repeat-x
			border 0
			clear both
			display block
			font-size 125%
			line-height 160%
			padding 2em 1em
			padding-bottom 4em
			padding-top 1em
			margin 0 auto
			p
				margin auto
				max-width 35em
			a
				color colorText
				&:hover
					color #00a6cd
			img.thumb
				display block
				margin auto
				margin-bottom .5em
				max-width (66% - 2em)
			&.quote
				.source
					a:first-child
						background rgba(0,0,0,.05)
						color colorText
						display block
						margin 1em -.5em 0 -.5em
						padding .5em
						text-decoration none
						&.tumblr_blog
							display inline
							padding 0
						&:hover
							background #00a6cd
							color #fff
							text-decoration none
							&:after
								content " Â»"
			&:nth-child(even)
				background #333 url('/img/slantedDark.png') center bottom repeat-x
				color #999
				.source
					a:first-child
						background rgba(255,255,255,.05)
						color #999
			&:first-child
				padding-top 0
			p:last-child 
				margin-bottom 0

/* =portfolio */
#portfolio
	#container
		margin auto
		max-width 45em
		padding 1em 2em
	a
		h4
			color colorLink
		&:hover h4
			color colorLinkHover
	.heart
		color red
	#products
		li.one-half
			p
				margin-right 2em
	iframe
		background-color #fff
		max-width (100% - 30px)
		padding 15px

/* =pagePiece */
#pagePiece
	#container
		margin auto
		max-width 45em
		padding 1em 2em
	h4
		padding-top 2em
	.list
		li
			border-top 1px solid #ccc
			clear both
			padding-bottom 2em
			padding-top 2em


/* =Utilities */
.one-half
	clear none
	float left
	width w = 45%
.one-third
	clear none
	float left
	width 31%
.two-thirds
	clear none
	float left
	width 64%
.bullets
	list-style-type disc
	li
		margin-top 1em
		margin-left 1em
		padding-left .25em
.center
	text-align center
.clear
	clear both
.left
	float left
.nowrap
	white-space nowrap
.right
	float right
.subtle
	opacity .75
.thumb
	background-color #fff
	height auto
	margin-bottom 1em
	position relative
	transition background-color animationSpeed ease-out
	&.left
		margin-right 1em
	&.right
		margin-left 1em
	&.small
		max-width 300px
	a &:hover
		background-color colorLinkHover
	

/* =Media =Queries */

@media all and (max-device-width: 751px)
	body
		font-size 200%
	header
		#logo a
			background transparent url("/img/logo@2x.png")
			height 109px
			width 181px
	.one-half,
	.one-third,
	.two-thirds
		float none
		width auto
	.left,
	.right
		float none
	.thumb
	.thumb.small
	.thumb.left
	.thumb.right
	img
		float none
		height auto
		margin 0
		margin-bottom 1em
		max-width 100%
		outline 0
		width 100%